# =========================================================
# LexNum - Configuración de Variables de Entorno
# =========================================================
# Copie este archivo a .env y ajuste los valores según su entorno
# IMPORTANTE: Nunca suba el archivo .env a repositorios públicos

# =========================================================
# FLASK
# =========================================================
# Entorno de ejecución: development, production, testing
FLASK_ENV=development

# Clave secreta para sesiones y cookies (CAMBIAR en producción)
# Generar con: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=lexnum-ofs-tlaxcala-2025

# Modo debug (solo en desarrollo)
FLASK_DEBUG=True

# =========================================================
# SERVIDOR
# =========================================================
# Host del servidor
FLASK_HOST=0.0.0.0

# Puerto del servidor
FLASK_PORT=4055

# =========================================================
# LOGGING
# =========================================================
# Nivel de logging: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
